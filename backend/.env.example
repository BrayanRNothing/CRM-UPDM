# Server Configuration
PORT=4000
NODE_ENV=development

# JWT Secret (generate a strong one: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=generate_a_strong_secret_key_here

# Database Configuration
# Para desarrollo: usa SQLite (SQLITE_PATH)
# Para producción (Railway): usa PostgreSQL (DATABASE_URL - se asigna automáticamente)
SQLITE_PATH=./database.db
DATABASE_URL=postgresql://user:password@localhost:5432/crm_infiniguard

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

